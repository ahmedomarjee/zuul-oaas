<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!--///// Controllers /////-->
    
    <!-- ClientsController is tested using mockito -->

    <bean id="resourcesController" class="cz.cvut.zuul.oaas.api.resources.ResourcesController"
          p:resourceService-ref="resourceService" />
    
    <!--///// Services /////-->

    <bean id="resourceService" class="cz.cvut.zuul.oaas.services.ResourceServiceImpl"
          p:resourceDAO-ref="resourceDAO" />
    
    <!--///// DAO /////-->

    <bean id="resourceDAO" class="cz.cvut.zuul.oaas.dao.memory.ResourceInMemoryDAO"
          p:identifierGenerator-ref="identifierGenerator"/>

    <!--///// Validators /////-->

    <!-- Bean to configure a default JSR-303 Validator as a Spring bean -->
    <bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"/>
    
    <!--///// Generators /////-->
    
    <bean id="credentialsGenerator" class="cz.cvut.zuul.oaas.generators.OAuth2ClientCredentialsGeneratorImpl" />
    <bean id="identifierGenerator" class="cz.cvut.zuul.oaas.generators.IdentifierGeneratorImpl" />

    <!-- Bind our message properties -->
    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource"
          p:basename="/WEB-INF/i18n/api-messages"
          p:defaultEncoding="utf-8"
          p:cacheSeconds="0" />
    
</beans>
