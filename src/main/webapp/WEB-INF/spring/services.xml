<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd">


    <!--////////// Services //////////-->


    <bean id="resourceService" class="cz.cvut.zuul.oaas.services.ResourcesServiceImpl"
          p:resourceDAO-ref="resourceDAO"
          p:identifierEncoder-ref="identifierEncoder" />

    <bean id="clientsService" class="cz.cvut.zuul.oaas.services.ClientsServiceImpl"
          p:clientDAO-ref="clientDAO"
          p:accessTokenDAO-ref="accessTokenDAO"
          p:refreshTokenDAO-ref="refreshTokenDAO"
          p:clientIdGenerator-ref="clientIdGenerator"
          p:secretGenerator-ref="secretGenerator"
          p:secretEncoder-ref="passwordEncoder" />

    <bean id="tokensService" class="cz.cvut.zuul.oaas.services.TokensServiceImpl"
          p:accessTokenDAO-ref="accessTokenDAO"
          p:clientDAO-ref="clientDAO" />


    <!--///// Validators /////-->

    <bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" primary="true"
          p:messageInterpolator-ref="messageInterpolator" />

    <!-- Hibernate Validator which can interpolate the value being validated in the constraint message -->
    <bean id="messageInterpolator" class="cz.cvut.zuul.oaas.support.ValueFormatterMessageInterpolatorFactoryBean"
          p:messageSource-ref="validatorMessageSource" />

    <bean id="validatorMessageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource"
          p:basename="classpath:/config/i18n/validator-messages"
          p:defaultEncoding="utf-8"
          p:cacheSeconds="0" />

    <!-- Enable method-level validation on annotated methods via JSR-303 -->
    <bean class="org.springframework.validation.beanvalidation.MethodValidationPostProcessor"
          p:validatorFactory-ref="validator" />


    <!--///// Generators and encoders /////-->

    <bean id="secretGenerator" class="cz.cvut.zuul.oaas.generators.SecurePasswordGenerator" />
    <bean id="clientIdGenerator" class="cz.cvut.zuul.oaas.generators.UUIDStringGenerator" />
    <bean id="identifierEncoder" class="cz.cvut.zuul.oaas.generators.RandomizedIdentifierEncoder" />

    <beans profile="dev">
        <bean id="passwordEncoder" class="org.springframework.security.crypto.password.NoOpPasswordEncoder" />
    </beans>

    <beans profile="production">
        <bean id="passwordEncoder" class="org.springframework.security.crypto.password.StandardPasswordEncoder" />
    </beans>

</beans>
