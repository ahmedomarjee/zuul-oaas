<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">


    <!--////////// Root Context Configuration //////////-->

    <!--
        Activate detection of various annotations such as @PostConstruct, @Required, @Autowired, ...
        Note that this will *not* enable classpath scan and auto-registering of beans.
    -->
    <context:annotation-config />

    <context:property-placeholder location="/WEB-INF/zuul-config.properties" />

    <!-- Export MBeans via JMX for monitoring -->
    <context:mbean-export />


    <!--//// Imports ////-->

    <import resource="services.xml" />
    <import resource="auth-server.xml"/>
    <import resource="security.xml"/>
    <import resource="persistence-mongo.xml"/>
</beans>
