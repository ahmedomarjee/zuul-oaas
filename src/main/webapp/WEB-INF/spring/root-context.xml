<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">


    <!--////////// Root Context Configuration //////////-->


    <!-- Export MBeans via JMX for monitoring -->
    <context:mbean-export />


    <!-- Load all configuration files -->
    <import resource="persistence.xml"/>
    <import resource="oauth2/auth-server.xml"/>
    <import resource="oauth2/security-server.xml"/>
    
    <beans profile="api-security">
        <import resource="oauth2/oauth-clients.xml"/>
        <import resource="oauth2/security-api.xml"/>
    </beans>

</beans>
