<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">


    <!--////////// Root Context Configuration //////////-->


    <!-- Export MBeans via JMX for monitoring -->
    <context:mbean-export />

    <beans profile="mongo">
        <import resource="persistence-mongo.xml"/>
    </beans>

    <beans profile="jdbc">
        <import resource="persistence-jdbc.xml"/>
    </beans>

    <beans profile="mongo,jdbc">
        <import resource="oauth2/auth-server.xml"/>
        <import resource="oauth2/security-server.xml"/>
        <!--<import resource="api/api-security.xml"/>-->
    </beans>
</beans>
