<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/auth">

    <!-- 
        Define Spring profile to be activated.
        Available profiles:
            - mongo: use Mongo database (recommended)
            - jdbc: use SQL database via JDBC
            - dev: developer profile (insert seed data etc.)
    -->
    
    <Environment name="spring.profiles.active" value="mongo,dev"
                 type="java.lang.String" override="false" />

    <Resource name="jdbc/AuthServerDS"
              auth="Container"
              type="javax.sql.DataSource"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              driverClassName="org.postgresql.Driver"
              minIdle="2" maxIdle="5" maxActive="20"
              initialSize="3"
              removeAbandonedTimeout="60"
              removeAbandoned="true"
              logAbandoned="true"
              minEvictableIdleTimeMillis="30000"
              username="dev"
              password="dev"
              url="jdbc:postgresql://localhost:5432/auth_server_dev" />

</Context>
