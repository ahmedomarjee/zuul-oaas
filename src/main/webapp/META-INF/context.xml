<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/auth">

    <!-- 
        Define Spring profiles to be activated.
        Available profiles:
            - ldap: authenticate users via LDAP (FIT)
            - ldap-2: authenticate users via LDAPs (FIT, FEL)
            - dev: developer profile (insert seed data, use in-memory users etc.)
    -->
    <Environment name="spring.profiles.active" value="ldap-2"
                 type="java.lang.String" override="false" />

    <!-- URI of LDAP server for users authentication -->
    <Environment name="conf/ldapServerUri" value="ldap://localhost/ou=dummy"
                 type="java.lang.String" override="false" />

</Context>
