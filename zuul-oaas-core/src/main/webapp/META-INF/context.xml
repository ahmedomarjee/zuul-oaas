<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/auth">

    <!-- 
        Define Spring profiles to be activated.
        Available profiles:
            - production: production profile
            - dev: developer profile (insert seed data, use in-memory users etc.)
            - ldap: authenticate users via LDAP
    -->
    <Environment name="spring.profiles.active" value="production,ldap"
                 type="java.lang.String" override="false" />

    <!--
        Location of zuul-config.properties
    -->
    <Environment name="zuul.config.file" value="conf/zuul-config.properties"
                 type="java.lang.String" override="false" />

</Context>
