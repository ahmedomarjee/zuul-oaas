<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">


    <!--////////// API Context Configuration //////////-->

    <!-- Enable the Spring MVC @Controller programming model -->
    <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter"
                  p:objectMapper-ref="jacksonObjectMapper" />
        </mvc:message-converters>
    </mvc:annotation-driven>

    <bean id="jacksonObjectMapper" class="org.codehaus.jackson.map.ObjectMapper"
          p:propertyNamingStrategy="CAMEL_CASE_TO_LOWER_CASE_WITH_UNDERSCORES" />


    <!--///// Controllers /////-->

    <bean id="clientsController" class="cz.cvut.zuul.oaas.api.rest.ClientsController"
          p:clientsService-ref="clientsService" />

    <bean id="resourcesController" class="cz.cvut.zuul.oaas.api.rest.ResourcesController"
          p:resourceService-ref="resourceService" />

    <bean id="tokensController" class="cz.cvut.zuul.oaas.api.rest.TokensController"
          p:tokensService-ref="tokensService" />

    <bean id="exceptionHandler" class="cz.cvut.zuul.oaas.api.rest.CommonExceptionHandler" />

    
    <!-- Import additional configuration files -->
    <import resource="aspects.xml" />

</beans>
